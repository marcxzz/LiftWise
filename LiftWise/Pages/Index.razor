@page "/"
@using LiftWise.Data
@inject IUserHandler userHandler
@inject NavigationManager navigationManager

<h1>Bentornato, @userHandler.ActiveUser.firstName</h1>
@* @if (userHandler.ActiveUser != null)
{
	<p>user logged in</p>
} *@

<section id="aggiungi-palestra">
	<div class="d-flex">
		<div class="container">
			<form class="row">
				<h3>Aggiungi palestra</h3>
				<hr>
				<div class="col-12">
					<input type="number" class="form-control p-2" placeholder="Inserisci codice">
				</div>
				<div class="col-12 mt-2">
					<button class="btn btn-primary fc-white text-uppercase fw-bold text-white w-100 p-2">Aggiungi</button>
				</div>
			</form>
		</div>
	</div>
</section>
<section id="prenota">
	<div class="container">
		<h3>Prenota</h3>
		<hr>
		<div class="row g-1 justify-content-center">
			<div class="col-lg-3 col-md-6 col-sd-12">
				<div class="p-3 h-100">
					<div class="card text-center h-100 d-flex flex-column">
						<div class="card-body">
							<h5 class="card-title mb-0 fw-bold">FitUp</h5>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">Via I. Newton, 11, 09131 Cagliari CA</li>
							<li class="list-group-item badge rounded-pill bg-success">23 posti disponibili</li>
							<li class="list-group-item badge rounded-pill bg-success">Aperto H24</li>
						</ul>
						<div class="card-footer p-3">
							<a href="" class="btn btn-primary fc-white text-uppercase fw-bold text-white w-100 p-2">Prenota</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section id="abbonamenti">
	<div class="container">
		<h3>Abbonamenti</h3>
		<hr>
		<div class="row g-1 justify-content-center">
			<div class="col-lg-3 col-md-6 col-sd-12">
				<div class="p-3 h-100">
					<div class="card text-center h-100 d-flex flex-column">
						<div class="card-body">
							<h5 class="card-title mb-0 fw-bold">FitUp</h5>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">start date - end date</li>
							<li class="list-group-item badge rounded-pill bg-success">totale mesi</li>
							<li class="list-group-item badge rounded-pill bg-success">in scadenza</li>
						</ul>
						<div class="card-footer p-3">
							<a href="" class="btn btn-primary fc-white text-uppercase fw-bold text-white w-100 p-2">Rinnova</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@code{
	protected override async Task OnInitializedAsync()
	{
		// base.OnInitialized();
		if (userHandler.ActiveUser == null) navigationManager.NavigateTo("/login");
	}
}